/* pages/skuerQrcode/skuerQrcode.wxss */
.container {
  background-color: #DF443D;
  overflow: hidden;
  background-image: url(http://jsy-1253427581.cossh.myqcloud.com/bg_wdmp.png);
  background-repeat: no-repeat;
  background-size: 100%;
  padding-bottom: 0;
}

.info-wrap {
  width: 100%;
  padding-top: 5rpx;
}

.info-avatar {
  width: 180rpx;
  height: 180rpx;
  margin: auto;
  margin-bottom: 20rpx;
  border-radius: 90rpx;
  display: block;
}

.info-name {
  width: 100%;
  font-size: 32rpx;
  color: #fff;
  line-height: 42rpx;
  text-align: center;
  margin-bottom: 15rpx;
}

.info-role {
  height: 35rpx;
  opacity: 0.8; 
  color: #fff;
  font-size: 22rpx;
  text-align: center;
  margin-bottom: 10rpx;
}

.info-role text {
  border: 1rpx solid #FFFFFF;
  border-radius: 22rpx;
  line-height: 35rpx;
  padding: 6rpx 15rpx;
}

.info-contact,
.info-company {
  width: 100%;
  font-size: 24rpx;
  color: #fff;
  line-height: 32rpx;
  text-align: center;
  opacity: 0.8;
}

.qrcode-wrap {
  width: 650rpx;
  height: 650rpx;
  box-shadow: 0rpx 0rpx 15rpx #999;
  margin: auto;
  background-color: #fff;
  margin-top: 20rpx;
  margin-bottom: 0;
}

.qrcode-pic {
  width: 80%;
  height: 80%;
  display: block;
  margin: auto;
  margin-top: 10%;
  background-color: #fff;
}

.share-btn {
  width: 400rpx;
  height: 98rpx;
  border: 2rpx solid #EB9696;
  border-radius: 100px;
  font-size: 32rpx;
  color: #FFFFFF;
  line-height: 98rpx;
  text-align: center;
  margin: auto;
  margin-top: 34rpx;
  background-color: transparent;
}

.share-btn::after {
  content: none;
  -webkit-transform: none;
  transform: none;

}