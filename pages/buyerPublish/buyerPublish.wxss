/* pages/buyerPublish/buyerPublish.wxss */
.container {
  height: auto;
  padding-bottom: 98rpx;
  overflow-x: hidden;
}

.description-pic {
  width: 100rpx;
  height: 100rpx;
  float: left;
}

.bp-submit-wrap {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #ccc;
  z-index: 999;
}

.cancel-btn {
  flex: 1;
  background-color: #fff;
  font-size: 32rpx;
  color: #4a4a4a;
  text-align: center;
  height: 100%;
  line-height: 98rpx;
}

.submit-btn {
  flex: 1;
  background-color: #DF443D;
  height: 100%;
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
}

.submit-btn text {
  width: 34rpx;
  height: 34rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_ly_fly_white.png);
  background-repeat: no-repeat;
  background-size: 100%;
  margin-left: 20rpx;
  vertical-align: middle;
  display: inline-block;
}

.bp-item {
  height: 100rpx;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  box-sizing: border-box;
  background-color: #fff;
}

.bp-type-wrap {
  margin-bottom: 21rpx;
}

.bp-item-left {
  float: left;
}

.bp-item-right {
  float: right;
}

.bp-item-icon {
  width: 36rpx;
  height: 36rpx;  
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_fbxq_yj.png);
  background-repeat: no-repeat;
  background-size: 100%;
  display: inline-block;
  vertical-align: middle;
  margin-top: -4rpx;
  margin-right: 14rpx;
}

.bp-item-header {
  font-size: 28rpx;
  color: #1b1d1d;
  display: inline-block;
}

.bp-picker {
  display: inline-block;
}

.bp-item-text {
  font-size: 28rpx;
  color: #767676;
}

.bp-item-arrow {
  width: 14rpx;
  height: 24rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_gg_arrow.png);
  background-repeat: no-repeat;
  background-size: 100%;
  display: inline-block;
  vertical-align: middle;
  margin-left: 10rpx;
  margin-top: -4rpx;
}

.bp-desc-icon {
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_fbxq_xq.png);
}

.bp-delivery-icon {
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_fbxq_call.png);
}

.bp-pub-icon {
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_fbxq_call.png);
}

.bp-description-wrap,
.bp-product-wrap,
.bp-publisher-wrap {
  background-color: #fff;
  margin-bottom: 21rpx;
}

.description-title,
.product-title,
.publisher-title {
  height: 100rpx;
  padding: 32rpx 30rpx 32rpx 0;
  margin-left: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.description-tpl-btn {
  color: #DF443D;
  font-size: 28rpx;
  font-weight: 500;
}

.bp-content {
  padding: 32rpx 30rpx 32rpx 0;
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #1b1d1d;
  width: 100%;
  box-sizing: border-box;
  height: 200rpx;
  border-top: 1rpx solid #e0e0e0;
}

.bp-content-placeholder {
  color: #b4b4b4;
}

.input-item {
  padding: 0rpx 30rpx 0rpx 0;
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #1b1d1d;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #e0e0e0;
  display: flex;
  flex-direction: row;
}

.prodcut-item {
  height: auto;
  width: auto;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.input-item-ext {
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 0rpx;
}

.input-item text {
  width: 140rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.bp-input {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
}

.unit-text {
  text-align: right;
  margin-right: 30rpx;
}

.bp-input-placeholder {
  color: #b4b4b4;
}

.description-pic-wrap {
  padding: 30rpx 0 30rpx 30rpx;
  display: flex;
  flex-direction: row;
  height: 120rpx;
}

.pic-item {
  width: 120rpx;
  height: 120rpx;
  margin-right: 22rpx;
  position: relative;
}

.description-pic {
  width: 100%;
  height: 100%;
}

.description-pic-del {
  width: 60rpx;
  height: 60rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/btn_delete.png);
  background-repeat: no-repeat;
  background-size: 100%;
  position: absolute;
  top: -30rpx;
  right: -30rpx;
}

.pic-add {
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/btn_fbxq_pic.png);
  background-repeat: no-repeat;
  background-size: 100%;
}

.bp-pub-anth {
  margin: 22rpx 30rpx;
  height: 264rpx;
  background-image: url(http://jsy-1253427581.cossh.myqcloud.com/ic_xqfb_bd.png);
  background-repeat: repeat-y;
  background-size: 100%;
  border-radius: 4rpx;
  position: relative;
  padding-top: 40rpx;
  box-sizing: border-box;
}

.pub-auth-del {
  width: 35rpx;
  height: 36rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/btn_fbxq_close.png);
  background-repeat: no-repeat;
  background-size: 100%;
  position: absolute;
  top: 8rpx;
  right: 8rpx;
}

.pub-auth-icon {
  width: 143rpx;
  height: 73rpx;
  background-image: url(http://jsy-1253427581.cossh.myqcloud.com/pic_fbxq_smbd.png);
  background-repeat: no-repeat;
  background-size: 100%;
  margin: auto;
  margin-bottom: 16rpx;
}

.pub-auth-text {
  opacity: 0.7;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 36rpx;
  text-align: center;
  margin-bottom: 26rpx;
}

.pub-auth-link {
  font-size: 28rpx;
  color: #FFFFFF;
  line-height: 48rpx;
  text-align: center;
}

.pub-auth-link text {
  width: 13rpx;
  height: 22rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_xqfb_arrow.png);
  background-repeat: no-repeat;
  background-size: 100%;
  display: inline-block;
  margin-left: 10rpx;
  vertical-align: middle;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  background-color: #e0e0e0;
  margin-right: 20rpx;
  border: 1rpx solid #e0e0e0;
  box-sizing: border-box;
}

.product-info {
  flex: 1;
}

.product-info-top {
  height: 114rpx;
  overflow: hidden;
}

.product-info-name {
  font-size: 28rpx;
  line-height: 38rpx;
}

.product-info-bottom {
  height: 86rpx;
  display: flex;
  flex-direction: row;
}

.product-price {
  flex: 1;
  margin-top: 16rpx;
}

.product-price-trade {
  color: #DF443D;
  font-size: 28rpx;
  line-height: 38rpx;
}

.product-price-sell {
  color: #b4b4b4;
  font-size: 24rpx;
  line-height: 38rpx;
}

.product-count {
  width: 160rpx;
  display: flex;
  flex-direction: row;
  padding-top: 46rpx;
}

.product-count-minus,
.product-count-plus {
  width: 40rpx;
  height: 40rpx;
  color: #767676;
  font-size: 32rpx;
  text-align: center;
  line-height: 38rpx;
  border: 1rpx solid #767676;
  border-radius: 4rpx;
  box-sizing: border-box;
  font-weight: 200;
}

.product-count-input {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  width: 80rpx;
  text-align: center;
}

.product-price-total {
  text-align: right;
  padding: 20rpx 0;
  flex: 1;
  padding-right: 30rpx;
}

.product-price-total .product-price-trade {
  font-size: 30rpx;
  line-height: 42rpx;
}

.ca-picker {
  flex: 1;
}

.ca-input {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
}

.ca-input-placeholder,
.ca-input text {
  color: #b4b4b4;
}

.ca-cal-icon {
  width: 70rpx;
  height: 70rpx;
  margin: 15rpx 21rpx 0 5rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/btn_ggzt_calendar.png);
  background-repeat: no-repeat;
  background-size: 100%;
}

.bp-item-arrow-more {
  margin-top: 35rpx;
  margin-right: 30rpx;
}

.address-value {
  flex: 1;
  margin-right: 10rpx;
  white-space: nowrap;  
  text-overflow: ellipsis; 
  overflow: hidden;
}

.address-value-placeholder {
  color: #b4b4b4;
}

.filter-mask {
  width: 100%;
  height: 100%;
  z-index: 999;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000000;
  opacity: 0;
  display: none;
}

.fobidden-mask {
  width: 100%;
  height: 100%;
  z-index: 999;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0;
  display: none;
}

.filter-panel {
  width: 80%;
  height: 100%;
  background-color: #F1F2F4;
  top: 0;
  right: -80%;
  box-sizing: border-box;
  position: fixed;
  z-index: 999;
  display: flex;
  flex-direction: column;
}

.filter-panel-open {
  z-index: 99999;
}

.fp-confirm-btn {
  margin-top: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #DF443D;
  text-align: center;
  background-color: #fff;
  font-weight: 500;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}

.product-list {
  padding: 20rpx;
  box-sizing: border-box;
  flex: 1;
  height: 100%;
  padding-bottom: 120rpx;
  padding-right: 0;
}

.product-list-item {
  float: left;
  width: 270rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border: 1rpx solid #e0e0e0;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.pli-image {
  background-color: #e0e0e0;
  width: 268rpx;
  height: 268rpx;
}

.pli-title {
  padding: 10rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  height: 96rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
}

.pli-trade-price {
  padding: 0 10rpx;
  font-size: 28rpx;
  color: #DF443D;
  line-height: 34rpx;
}

.pli-sell-price {
  padding: 0 10rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  margin-bottom: 6rpx;
}

.pli-cart {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_cart_normal.png);
  background-repeat: no-repeat;
  background-size: 100%;
}

.pli-cart-selected {
   background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_cart_pressed.png);
}

.list-empty-wrap {
  margin: auto;
  margin-top: 187rpx;
  width: 80%;
  background-color: #F1F2F4;
  padding: 50rpx 20rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
}

.list-empty-icon {
  width: 204rpx;
  height: 204rpx;
  margin: auto;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/pic_needs_clear.png);
  background-repeat: no-repeat;
  background-size: 100%;
  margin-bottom: 22rpx;
}

.list-empty-text {
  font-size: 28rpx;
  color: #9b9b9b;
  line-height: 48rpx;
  text-align: center;
}