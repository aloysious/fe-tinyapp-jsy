/* pages/buyerCenter/buyerCenter.wxss */
.bc-info-wrap {
  width: 100%;
  height: 260rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/bg_grzx.png);
  background-repeat: no-repeat;
  background-size: 100%;
  display: flex;
  flex-direction: row;
  padding: 70rpx 39rpx;
  box-sizing: border-box;
}

.bc-info-wrap image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}

.bc-info-middle {
  margin-left: 24rpx;
  flex: 1;
}

.bc-info-name {
  font-size: 30rpx;
  color: #FFFFFF;
  line-height: 35rpx;
  margin-bottom: 13rpx;
}

.bc-info-name text {
  display: inline-block;
  height: 35rpx;
  opacity: 0.8;
  border: 1rpx solid #FFFFFF;
  border-radius: 19rpx;
  color: #fff;
  line-height: 35rpx;
  padding: 0 15rpx;
  font-size: 22rpx;
  margin-left: 10rpx;
  margin-top: -5rpx;
}

.bc-info-phone,
.bc-info-company,
.bc-info-tips {
  opacity: 0.8;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 27rpx;
  margin-bottom: 6rpx;
}

.bc-info-right {
  width: 130rpx;
  padding-top: 40rpx;
}

.bc-info-authtext {
  opacity: 0.8;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 27rpx;
  margin-bottom: 6rpx;
  display: inline-block;
}

.bc-info-arrow {
  width: 14rpx;
  height: 24rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_xqfb_arrow.png);
  background-repeat: no-repeat;
  background-size: 100%;
  margin-left: 11rpx;
  display: inline-block;
  vertical-align: middle;
}

.bc-func-wrap,
.bc-help-wrap {
  background-color: #fff;
}

.bc-help-wrap {
  margin-top: 20rpx;
}

.bc-item {
  height: 100rpx;
  padding: 32rpx 30rpx 0 0;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  box-sizing: border-box;
  background-color: #fff;
}

.bc-stat,
.bc-help {
  border-bottom: 0;
}

.bc-item-left {
  float: left;
}

.bc-item-right {
  float: right;
}

.bc-item-icon {
  width: 33rpx;
  height: 33rpx;  
  background-repeat: no-repeat;
  background-size: 100%;
  display: inline-block;
  vertical-align: middle;
  margin-top: -4rpx;
  margin-right: 14rpx;
}

.bc-follow-icon {
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_needs_star.png);
}

.bc-stat-icon {
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_needs_sj.png);
}

.bc-help-icon {
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_needs_qa.png);
}

.bc-item-header {
  font-size: 28rpx;
  color: #1b1d1d;
  display: inline-block;
}

.bc-item-arrow {
  width: 14rpx;
  height: 24rpx;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_gg_arrow.png);
  background-repeat: no-repeat;
  background-size: 100%;
  display: inline-block;
  vertical-align: middle;
  margin-left: 10rpx;
  margin-top: -4rpx;
}

.bc-changerole-wrap {
  margin-top: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #fff;
  font-size: 28rpx;
  color: #F55523;
  font-weight: 500;
}

.qa-wrap {
  margin-top: 40rpx;
  color: #767676;
  font-size: 24rpx;
  text-align: center;
  opacity: 0.6;
}