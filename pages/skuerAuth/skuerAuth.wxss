/* pages/skuerAuth/skuerAuth.wxss */
.filter-mask {
  width: 100%;
  height: 100%;
  z-index: 99999;
  position: absolute;
  top: 0;
  left: 0;
  background-color: #000000;
  opacity: 0;
  display: none;
}

.filter-panel {
  width: 80%;
  height: 100%;
  position: absolute;
  top: 0;
  right: -80%;
  z-index: 999999;
  box-sizing: border-box;
  background-color: #f1f2f4;
}

.fp-wrap {
  background-color: #fff;
  padding-left: 30rpx;
}

.type-item-title {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #1b1d1d;
  border-bottom: 1rpx solid #e0e0e0;
  background-color: #fff;
}

.type-item-wrap {
  padding: 30rpx 30rpx 30rpx 0;
  background-color: #fff;
}

.clearfix:after{
  content:".";
  display:block;
  height:0;
  clear:both;
  visibility:hidden;
}

.type-item {
  font-size: 28rpx;
  line-height: 48rpx;
  padding: 10rpx 22rpx;
  height: 68rpx;
  border-radius: 34rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
  color: #9b9b9b;
  background-color: #fff;
  border: 1rpx solid #9b9b9b;
  float: left;
}

.type-item-selected {
  color: #FFFFFF;
  border: 1rpx solid #4285F4;
  background-color: #4285F4;
}

.fp-confirm-wrap {
  margin-top: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #fff;
  font-size: 28rpx;
  color: #F55523;
  font-weight: 500;
}

.ba-input-wrap {
  background-color: #fff;
}

.input-item {
  padding: 0rpx 30rpx 0rpx 0;
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #1b1d1d;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  flex-direction: row;
}

.input-item-ext {
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 0rpx;
}

.input-item text {
  width: 140rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.ba-input {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
}

.ba-input-placeholder {
  color: #b4b4b4;
}

.get-code {
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #4285F4;
  text-align: right;
  padding-right: 30rpx;
  box-sizing: border-box;
}

.get-code-disabled {
  color: #b4b4b4;
}

.ba-save-wrap {
  margin-top: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #fff;
  font-size: 28rpx;
  color: #F55523;
  font-weight: 500;
}

.ba-producttype-wrap {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  padding-left: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.ba-producttype-wrap text {
  width: 140rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #1b1d1d;
}

.ba-producttype-list {
  height: 100%;
  width: 500rpx;
  white-space:nowrap;
}

.ba-producttype-item {
  font-size: 28rpx;
  color: #FFFFFF;
  line-height: 48rpx;
  padding: 10rpx 22rpx;
  height: 68rpx;
  background-color: #4285F4;
  border-radius: 34rpx;
  box-sizing: border-box;
  margin-top: 16rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.ba-producttype-arrow {
  width: 74rpx;
  height: 100%;
  border-left: 1rpx solid #e0e0e0;
  background-image: url(http://bys2b-1253427581.cossh.myqcloud.com/ic_gg_arrow.png);
  background-repeat: no-repeat;
  background-size: 14rpx 24rpx;
  background-position: center center;
}