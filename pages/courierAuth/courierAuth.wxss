/* pages/buyerAuth/buyerAuth.wxss */
.ba-input-wrap {
  background-color: #fff;
}

.input-item {
  padding: 0rpx 30rpx 0rpx 0;
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #1b1d1d;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  flex-direction: row;
}

.input-item-ext {
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 0rpx;
}

.input-item text {
  width: 140rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.ba-input {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
}

.ba-input-placeholder {
  color: #b4b4b4;
}

.get-code {
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #DF443D;
  text-align: right;
  padding-right: 30rpx;
  box-sizing: border-box;
}

.get-code-disabled {
  color: #b4b4b4;
}

.ba-save-wrap {
  margin-top: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #fff;
  font-size: 28rpx;
  color: #80d2bb;
  font-weight: 500;
}