page {
  background-color: #fff;
}

.container {
  background-color: #fff;
  padding-bottom: 0;
}

.slide-con {
    background-color: #333333;
    position: relative;
}

.slide-swiper {
    width: 100%;
    height: 100%;
}

.slide-image-wrap {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.slide-image {
    width: 100%;
    height: 900rpx;
    flex: 1;
}

.slide-info {
    position: absolute;
    left: 0;
    bottom: 0;
    color: #eeeeee;
    font-size: 18px;
    line-height: 1.5;
    width: 100%;
    background-color: rgba(51,51,51,0.4);
}

.slide-info-left {
    float: left;
    padding: 10px;
    width: 80%;
    box-sizing: border-box;
}

.slide-description {
    font-size: 14px;
    margin-top: 5px;
}

.slide-info-right {
    float: right;
    padding: 10px;
    width: 20%;
    box-sizing: border-box;
    text-align: right;
    color: #666666;
    font-size: 14px;
}